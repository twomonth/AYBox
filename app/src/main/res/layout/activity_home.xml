<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/hezi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:text="福利盒子"/>
        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/icon_brief_download_1"/>
        </RelativeLayout>
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title">
    </WebView>
    <RelativeLayout
        android:id="@+id/rl_inneradver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack_ban"
        android:layout_centerInParent="true"
        android:visibility="gone">
        <ImageView
            android:layout_width="253dp"
            android:layout_height="403dp"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"/>
        <ImageView
            android:id="@+id/iv_inneradver"
            android:layout_width="250dp"
            android:layout_height="400dp"
            android:background="@drawable/bg_border"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_closeadver"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/iv_inneradver"
            android:layout_alignTop="@+id/iv_inneradver"
            android:background="@mipmap/iv_close"/>
    </RelativeLayout>

</RelativeLayout>