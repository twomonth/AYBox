<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.aygames.twomonth.aybox.activity.SplashActivity">
    <ImageView
        android:id="@+id/iv_advertisement"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/hezi"
        android:id="@+id/iv_logo"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version_splash"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:textColor="@color/colorRed"/>
    <TextView
        android:id="@+id/tv_tiaoguo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yj_white_bg"
        android:text="跳过"
        android:textColor="@color/colorWhite"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
